<link rel="stylesheet" href="/styles/login.css">
<script src="/javascripts/login/login.js"></script>

<div class="container-login">
	<div class="wrap-login p-l-85 p-r-85 p-t-55 p-b-55">
		<form class="login-form validate-form flex-sb flex-w" action="/login" method="post">
			<span class="login-form-title p-b-32">
				Авторизация пользователя
			</span>

			<label class="input-label p-b-11" for="name">
				Имя пользователя
			</label>
			<div class="wrap-input validate-input m-b-36" data-validate="Введите имя пользователя">
				<input class="input-data" type="text" name="username" id="name" autofocus>
				<span class="focus-input"></span>
			</div>

			<label class="input-label p-b-11" for="pass">
				Пароль
			</label>
			<div class="wrap-input validate-input m-b-12" data-validate="Введите пароль">
				<span class="btn-show-pass">
					<i class="fa fa-eye"></i>
				</span>
				<input class="input-data" type="password" name="password" id="pass" autocomplete="off">
				<span class="focus-input"></span>
			</div>

			<div class="container-login-form-btn">
				<button class="login-form-btn" type="submit">
					Войти
				</button>
			</div>
		</form>
	</div>
</div>

<footer class="footer">
	<span>База данных ОРПСВТ, 2019</span>
</footer>