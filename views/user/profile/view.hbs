<main role="main">
	<div class="d-flex justify-content-center flex-sm-wrap flex-md-nowrap pt-3">
		<div class="col-sm-11 col-md-11 order-md-1">
			<div class="card">
				<div class="card-body">
					<div class="row">
						<div class="col-md-3 text-center">
							<span><i class="fa fa-user avatar" aria-hidden="true"></i></span>
						</div>
						<div class="col-md-9 text-left mb-2">
							<div class="card-text mb-3 h3"><strong>{{userInfo.fullname}}</strong></div>
							<div class="card-text"><span class="infoLabel">ОВД:</span> {{userInfo.department}}</div>
							<div class="card-text"><span class="infoLabel">Должность:</span> {{userInfo.position}}</div>
							<div class="card-text"><span class="infoLabel">Email:</span> {{userInfo.email}}</div>
							<div class="card-text"><span class="infoLabel">Телефон:</span> {{userInfo.phone}}</div>
						</div>
					</div>
				</div>
			</div>
			{{#if canEdit}}
			<div class="row pt-3 text-right">
				<div class="col-md-12">
					<a href="/user/{{userInfo.id}}/profile/edit"><i class="fa fa-edit" aria-hidden="true"></i>
						Редактировать профиль</a><br>
				</div>
			</div>
			{{/if}}
		</div>
	</div>
</main>

<link rel="stylesheet" href="/styles/user/profile.css">