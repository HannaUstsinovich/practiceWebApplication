<main role="main">
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 border-bottom">
		<div class="col-md-9 order-md-1">
			<h4 class="mb-3">Добавление пользователя</h4>
			<form role="form" method="POST" action="/settings/user/add" enctype="multipart/form-data">
				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label for="department">Подразделение *</label>
						<select class="form-control" id="department" name="department" required>
							<option value="">Выберите подразделение...</option>
							<option>Служба1</option>
							<option>Служба2</option>
							<option>Служба3</option>
							<option>Служба4</option>
							<option>Служба5</option>
						</select>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label>Имя пользователя *</label>
						<input type="text" class="form-control" name="fullname" required>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-6 mb-3 mb-sm-0">
						<label>Логин *</label>
						<input type="text" class="form-control" name="username" required>
					</div>
					<div class="col-md-6">
						<label>Пароль *</label>
						<input type="password" class="form-control form-control-user" name="password" required>
					</div>

				</div>

				<div class="form-check mb-3">
					<input class="form-check-input" type="checkbox" name="admin" value="2" id="adminCheck">
					<label class="form-check-label" for="adminCheck">
						Администратор
					</label>
				</div>
	
				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label>Должность</label>
						<input type="text" class="form-control" name="position">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label>Email</label>
						<input type="email" class="form-control" name="email" placeholder="email@example.com">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label>Телефон</label>
						<input type="text" class="form-control" name="phone">
					</div>
				</div>

				<hr class="mb-4">
				<div class="form-group row">
					<div class="col-md-12">
						<button class="btn btn-info btn-lg btn-block" type="submit">Добавить пользователя</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</main>