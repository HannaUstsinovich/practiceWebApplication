<main role="main">
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap pt-3">
		<div class="col-md-9 order-md-1">
			<h4 class="mb-3">Добавление пользователя</h4>
			<form role="form" id="addUserForm">
				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label for="department">Орган внутренних дел *</label>
						<select class="form-control" id="department" name="department" required>
							<option value="">Выберите подразделение...</option>
						</select>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label>Имя пользователя *</label>
						<input type="text" class="form-control" name="fullname" required>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-6 mb-3 mb-sm-0">
						<label>Логин *</label>
						<input type="text" class="form-control" name="username" required>
					</div>
					<div class="col-md-6">
						<label>Пароль *</label>
						<input type="password" class="form-control form-control-user" name="password" required>
					</div>

				</div>

				<div class="form-check mb-3">
					<input class="form-check-input" type="checkbox" name="admin" value="2" id="adminCheck">
					<label class="form-check-label" for="adminCheck">
						Администратор
					</label>
				</div>

				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label>Должность</label>
						<input type="text" class="form-control" name="position">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label>Email</label>
						<input type="email" class="form-control" name="email" placeholder="email@example.com">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-12 mb-3 mb-sm-0">
						<label>Телефон</label>
						<input type="text" class="form-control" name="phone">
					</div>
				</div>

				<div class="form-group row pt-2">
					<div class="col-md-12">
						<button class="btn btn-info btn-lg btn-block" id="addUserBtn" type="submit">Добавить пользователя</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</main>

<script src="/javascripts/docs/options/departments_list.js"></script>
<script src="/javascripts/settings/add_user.js"></script>