<style>
	th{
		text-align: right;
	}
</style>
<main role="main" class="col-md-12">
	<div class="d-flex justify-content-center flex-wrap flex-md-nowrap align-items-center pt-3 border-bottom">
		<h4 class="mb-4">Запись номер {{doc.id}}</h4>
	</div>
	<table class="table table-condensed">
		<tbody>
			<tr>
				<th style="width:18%">ФИО:</th>
				<td><a href="/user/profile/{{doc.user_id}}">{{doc.employee}}</a></td>
			</tr>
			<tr>
				<th>ОВД:</th>
				<td>{{doc.service}}</td>
			</tr>
			<tr>
				<th>ЕК:</th>
				<td>{{doc.book_number}}</td>
			</tr>
			<tr>
				<th>Дата регистрации:</th>
				<td>{{doc.registration_date}}</td>
			</tr>
			<tr>
				<th>Статья УК:</th>
				<td>{{doc.cc_article}}</td>
			</tr>
			<tr>
				<th>Фабула:</th>
				<td>{{doc.description}}</td>
			</tr>
			{{#if doc.comment}}
			<tr>
				<th>Примечание:</th>
				<td>{{doc.comment}}</td>
			</tr>
			{{/if}}
			{{#if doc.phase_date}}
			<tr>
				<th>Срок рассмотрения материала:</th>
				<td>{{doc.phase}} <br> {{doc.phase_date}} </br> </td>
			</tr>
			{{/if}}
			<tr>
				<th>Процессуальное решение:</th>
				<td>{{doc.decision}} <br> {{doc.decision_date}} </br> </td>
			</tr>

			{{#if identifiers}}
			<tr>
				<th class="text-center" colspan="2">
					<h5>Идентификаторы:</h5>
				</th>
			</tr>
			{{#each identifiers}}
			<tr>
				<th>{{this.feature}}:</th>
				<td>{{this.identifier}}
					{{#if this.remark}}
					&ensp;({{this.remark}})
					{{/if}}
				</td>
			</tr>
			{{!-- <tr>
				<td colspan="2">
					<span class="h6">{{this.feature}}:</span>
					&ensp;{{this.identifier}}
					{{#if this.remark}}
					&ensp;({{this.remark}})
					{{/if}}
				</td>
			</tr> --}}
			{{/each}}
			{{/if}}
			{{#if can_add_identifier}}
			<tr>
				<td colspan="2">
					<button type="button" class="btn btn-info" data-toggle="modal" data-target="#addIdentifierModal">
						<small>Добавить идентификатор</small>
					</button>
				</td>
			</tr>
			{{/if}}
		</tbody>
	</table>

	<!-- Modal -->
	<div class="modal fade" id="addIdentifierModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title ml-3" id="modalLabel">Добавление идентификатора</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="container-fluid">
						<form role="form" id="inputIdentifierForm">
							<div class="row">
								<div class="col-md-5">
									<div class="form-group">
										<label for="inputFeature">Признак</label>
										<select class="form-control feature" id="inputFeature" required>
											<option value="">Выберите признак</option>
										</select>
									</div>
								</div>
								<div class="col-md-7">
									<div class="form-group">
										<label for="inputIdentifier">Идентификатор</label>
										<input type="text" class="form-control" id="inputIdentifier" required>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<textarea class="form-control" rows="2" id="inputRemark" placeholder="Примечание" aria-label="Примечание"></textarea>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12 mb-4">
									<small class="text-muted">После нажатия на кнопку "Сохранить данные" введенная информация будет передана для
										дальнейшей обработки</small>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12 mb-3 text-right">
									<button class="btn btn-info" id="add-identifier-btn" type="submit" data-doc_id="{{doc.id}}">Сохранить
										данные</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>
<script src="/javascripts/docs/options/features_list.js"></script>
<script src="/javascripts/docs/info.js"></script>

